{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "module": "commonjs",
    "noImplicitThis": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "jsx": "preserve",
    "target": "es6",
    "suppressImplicitAnyIndexErrors": true,
    "lib": [
      "dom",
      "es5",
      "es6",
      "es7",
      "es2015.generator",
      "es2015.symbol",
      "es2015.promise"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}